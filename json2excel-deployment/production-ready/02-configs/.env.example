# JSON to Excel - Production Environment Configuration
# Generated: 2025-12-09

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============================================
# DOMAIN CONFIGURATION
# ============================================
DOMAIN=your-domain.com
PUBLIC_URL=https://your-domain.com

# ============================================
# CLOUDFLARE CONFIGURATION
# ============================================
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here
CLOUDFLARE_EMAIL=your-email@example.com

# ============================================
# VPS SERVER DETAILS
# ============================================
VPS_IP=your_vps_ip_address
VPS_HOSTNAME=your_vps_hostname
VPS_USER=your_username
VPS_PASSWORD=your_secure_password_here

# ============================================
# SECURITY SETTINGS
# ============================================
# SSH Key path (passwordless auth recommended)
SSH_KEY_PATH=/root/.ssh/id_ed25519
SSH_PORT=2222

# ============================================
# APPLICATION SETTINGS
# ============================================
# File upload limits
MAX_FILE_SIZE=100
MAX_FILES=100
UPLOAD_DIR=/app/uploads

# Session secret (change this!)
SESSION_SECRET=change-this-to-random-secure-string-min-32-chars

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=info
LOG_DIR=/var/log/json2excel
ENABLE_MONITORING=true

# ============================================
# BACKUP SETTINGS
# ============================================
BACKUP_ENABLED=true
BACKUP_DIR=/var/backups/json2excel
BACKUP_RETENTION_DAYS=30

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS SETTINGS
# ============================================
ALLOWED_ORIGINS=https://json2excel.devtestenv.org,https://devtestenv.org

# ============================================
# NGINX CONFIGURATION
# ============================================
NGINX_WORKER_PROCESSES=auto
NGINX_CLIENT_MAX_BODY_SIZE=100M

# ============================================
# SSL/TLS SETTINGS
# ============================================
SSL_CERT_PATH=/etc/ssl/certs/json2excel.crt
SSL_KEY_PATH=/etc/ssl/private/json2excel.key
